{
  "name": "mcp-consultant-tools",
  "version": "22.0.0",
  "description": "Complete MCP Consultant Tools package with all integrations: PowerPlatform, Azure DevOps, Figma, Application Insights, Log Analytics, Azure SQL, Service Bus, SharePoint, GitHub Enterprise, and Azure AD B2C",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "bin": "build/index.js",
  "exports": {
    ".": {
      "import": "./build/index.js",
      "types": "./build/index.d.ts"
    }
  },
  "files": [
    "build",
    "README.md"
  ],
  "scripts": {
    "build": "tsc",
    "clean": "rm -rf build *.tsbuildinfo",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "powerplatform",
    "dynamics",
    "dataverse",
    "azure-devops",
    "figma",
    "application-insights",
    "log-analytics",
    "azure-sql",
    "sql-server",
    "service-bus",
    "sharepoint",
    "sharepoint-online",
    "github-enterprise",
    "azure-b2c",
    "identity",
    "telemetry",
    "monitoring",
    "crm"
  ],
  "author": "Michal Sobieraj",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/klemensms/mcp-consultant-tools.git",
    "directory": "packages/meta"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "dependencies": {
    "@mcp-consultant-tools/application-insights": "*",
    "@mcp-consultant-tools/azure-b2c": "*",
    "@mcp-consultant-tools/azure-devops": "*",
    "@mcp-consultant-tools/azure-sql": "*",
    "@mcp-consultant-tools/core": "*",
    "@mcp-consultant-tools/figma": "*",
    "@mcp-consultant-tools/github-enterprise": "*",
    "@mcp-consultant-tools/log-analytics": "*",
    "@mcp-consultant-tools/powerplatform": "*",
    "@mcp-consultant-tools/powerplatform-customization": "*",
    "@mcp-consultant-tools/powerplatform-data": "*",
    "@mcp-consultant-tools/service-bus": "*",
    "@mcp-consultant-tools/sharepoint": "*",
    "@modelcontextprotocol/sdk": "^1.0.4"
  },
  "devDependencies": {
    "@types/node": "^22.10.5",
    "typescript": "^5.8.2"
  }
}
